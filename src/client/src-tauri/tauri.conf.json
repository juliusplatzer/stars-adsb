{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "pnpm run tauri:prepare",
    "beforeDevCommand": "pnpm run demo",
    "devPath": "http://127.0.0.1:4173/index.html",
    "distDir": "../.tauri-dist"
  },
  "package": {
    "productName": "STARS ADS-B",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": false,
      "identifier": "com.starsadsb.desktop"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "STARS ADS-B",
        "width": 1600,
        "height": 960,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html"
      }
    ]
  }
}
